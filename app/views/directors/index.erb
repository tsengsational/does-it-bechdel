<div class="col-xs-12" style="height:50px;"></div>
<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10">
  <h1>All Directors</h1>
  </div>
  <div class="col-md-1"></div>
</div>

<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10">
    <div class="form-group">
      <a href="/directors/new" class="btn btn-default" role="button">Create a New Actor</a>
      <% @name = "" %>
    </div>
    <div class="form-group">
      <form class="form-group" action="/directors/search" method="get">
        <div class="form-group">
          <label for="">Find Director by Name:<input type="text" name="director[name]" class="form-control"></label>
          <input type="submit" name="submit" value="Search" class="btn btn-default">
        </div>
      </form>
    </div>
  </div>
  <div class="col-md-1"></div>
</div>

<div class="row">
  <div class="col-md-1">
  </div>
  <div class="col-md-10">
    <table class="table" >
<% @directors.each_with_index do |director, index| %>      <tr>
        <td><%="#{index + 1}"%></td>
        <td><a href="/directors/<%=director.id%>" ><%="#{director.name}"%></a></td>
      </tr>
      <% end %>
    </table>
  </div>
  <div class="col-md-1">
  </div>
</div>
